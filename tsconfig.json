{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noEmitHelpers": false,
        "sourceMap": true,
        "watch": true,
        "baseUrl": "./",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*", "libs/*", "src/*"]
        }
    },
    "include": ["./src", "./libs", "./test"]
}
